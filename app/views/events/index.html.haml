%h1.green Eventos

%br
= link_to 'Nuevo Evento', new_event_path, class: "btn btn-default botonGreen"

%br
%br


%ul.list-group
  - @events.each do |event|
    %li.list-group-item.exhibition-item
      .row
        .col-md-4 
          %img{:alt => "Smiley face", :height => "200", :src => event.file_url, :width => "350"}/
        .col-md-6
          %h1.green= event.name
          %h3= event.description
          %h3= event.date
        .col-md-2
          %br
          = link_to 'Editar', edit_event_path(event), class: "btn btn-default btn-block botonGreen"
          %br
          = link_to 'Borrar', event, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-default btn-block botonGreen"
          %br