.jumbotron.exhibition-item
  = form_for @event do |f|
    - if @event.errors.any?
      #error_explanation
        %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg

    .field
      %label Nombre
      = f.text_field :name, class: "form-control"
    .field
      %label DescripciÃ³n
      = f.text_area :description, class: "form-control"
    .field
      %label Fecha
      = f.date_select :date, class: "form-control", :html=>{:class => "form-control"} 
    .field
      %label Foto
      = f.file_field :file
    .actions
      = f.submit 'Guardar', class: "btn btn-success"
