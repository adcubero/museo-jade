= form_for @audioguide, @path do |f|
  - if @audioguide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@audioguide.errors.count, "error")} prohibited this audioguide from being saved:"
      %ul
        - @audioguide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :audio
    = f.file_field :audio
  .field
    = f.label :file
    = f.file_field :file
  .actions
    = f.submit 'Save'
