= form_for @audioguide do |f|
  - if @audioguide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@audioguide.errors.count, "error")} prohibited this audioguide from being saved:"
      %ul
        - @audioguide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :file
    = f.text_field :file
  .field
    = f.label :audio
    = f.text_field :audio
  .field
    = f.label :piece
    = f.text_field :piece
  .actions
    = f.submit 'Save'
