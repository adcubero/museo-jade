= form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :adult
    = f.number_field :adult, value:0
  .field
    = f.label :child
    = f.number_field :child, value:0
  .field
    = f.label :student
    = f.number_field :student, value:0
  .field
    = f.label :elder
    = f.number_field :elder, value:0
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
