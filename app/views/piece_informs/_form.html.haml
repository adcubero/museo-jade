= form_for @piece_inform , @path do |f|
  - if @piece_inform.errors.any?
    #error_explanation
      %h2= "#{pluralize(@piece_inform.errors.count, "error")} prohibited this piece_inform from being saved:"
      %ul
        - @piece_inform.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :language
    = f.select(:language, [['Español', 'spanish'], ['Inglés', 'english']]) 
  .actions
    = f.submit 'Save'
