!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title JADE
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'
    = stylesheet_link_tag    'myCSS'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.bar
      .container
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-2", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} Museo del Jade
          #bs-example-navbar-collapse-2.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                %a{:href => exhibitions_path}
                  Exhibiciones
                  %span.sr-only (current)
              %li
                %a{:href => events_path} Eventos
              %li
                %a{:href => tickets_path} Tickets
            %ul.nav.navbar-nav.navbar-right
              - if user_signed_in?
                %li
                  %a{:href => "#"} #{current_user.email}
                %li
                  %a{:href => edit_user_registration_path} Editar Perfil
                %li
                  \#{link_to "Salir", destroy_user_session_path, :method => :delete}
              - else
                %li
                  %a{:href => new_user_registration_path} Sign up
                %li
                  %a{:href => new_user_session_path} Sign in
    .container
      = yield
