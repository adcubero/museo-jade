.jumbotron.exhibition-item
  = form_for @piece, @path do |f|
    - if @piece.errors.any?
      #error_explanation
        %h2= "#{pluralize(@piece.errors.count, "error")} prohibited this piece from being saved:"
        %ul
          - @piece.errors.full_messages.each do |msg|
            %li= msg

    .field
      %label Nombre
      = f.text_field :name, class: "form-control"
    .field
      %label Descripci√≥n
      = f.text_area :description, class: "form-control"
    .field
      %label Cuarto
      = f.text_field :room, class: "form-control"
    .field
      %label Vitrina
      = f.text_field :showcase, class: "form-control"
    .field
      %label Foto
      = f.file_field :file
    .actions
      = f.submit 'Guardar', class: "btn btn-success"
