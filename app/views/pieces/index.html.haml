%ul
  - @pieces.each do |piece|
    / Button trigger modal
    %li
      %a{"data-target" => "#"+piece.id.to_s, "data-toggle" => "modal"}
        %img{:alt => "Smiley face", :height => "200", :src => piece.file_url, :width => "200"}/
    /%button.btn.btn-primary.btn-lg{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}= piece.name
    / Modal
    .modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1", :id => piece.id.to_s}
      .modal-dialog{:role => "document"}
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4#myModalLabel.modal-title= piece.name
          .modal-body
            %img{:alt => "Smiley face", :height => "200", :src => piece.file_url, :width => "350"}/
            
            %h3= piece.description
            %h3= piece.room
            %h3= piece.showcase
          .modal-footer
            = link_to 'Editar', edit_exhibition_piece_path(piece.exhibition,piece), class: "btn btn-default"
            = link_to 'Borrar', exhibition_piece_path(piece.exhibition,piece), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-default"


