.jumbotron.exhibition-item
  = form_for @exhibition do |f|
    - if @exhibition.errors.any?
      #error_explanation
        %h2= "#{pluralize(@exhibition.errors.count, "error")} prohibited this exhibition from being saved:"
        %ul
          - @exhibition.errors.full_messages.each do |msg|
            %li= msg

    .field
      %label Nombre
      = f.text_field :name, class: "form-control"
    .field
      %label Descripción
      = f.text_area :description, class: "form-control"
    .field
      %label Pequeña Descripción
      = f.text_field :miniDescription, class: "form-control"
    .field
      %label Foto
      = f.file_field :file
    .actions
      = f.submit 'Guardar', class: "btn btn-success"

