= form_for @exhibition do |f|
  - if @exhibition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exhibition.errors.count, "error")} prohibited this exhibition from being saved:"
      %ul
        - @exhibition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :miniDescription
    = f.text_field :miniDescription
  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :file
    = f.file_field :file
  .actions
    = f.submit 'Save'
